<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MRCA"
        mc:Ignorable="d"
        Title="Pathfinder Module based Rule and Character Assistant" Height="450" Width="800">
    <Grid>
        
        <ScrollBar Width="17" HorizontalAlignment="Right"/>
        <StackPanel VerticalAlignment="Center" Margin="0,10,0,0">
            <GroupBox Header="GroupBox">
                <Label Content="Str:" Margin="0,5,10,5" MaxWidth="50" HorizontalAlignment="Center" MaxHeight="30"></Label>
                <TextBox x:Name="StrengthScore" MinHeight="40" MaxHeight="40" MinWidth="70" MaxWidth="70"></TextBox>
            </GroupBox>
            <TextBox x:Name="TextInput" MinHeight="20" MaxHeight="20" MinWidth="110" MaxWidth="110" BorderBrush="Black" BorderThickness="1" Margin="0,5,0,5"/>
            <Button Content="Center Stage Button" MaxWidth="120" Click="Button_Click" Margin="0,5,0,5"/>
            <ProgressBar Name="ClickProgress" Height="10" MaxHeight="10" Width="100" MaxWidth="100" Margin="0,5,0,5"/>
        </StackPanel>
        
    </Grid>
</Window>
